{
    "name": "useclassy/laravel",
    "description": "Laravel integration for UseClassy - Transform class:modifier syntax in Blade templates",
    "keywords": [
        "laravel",
        "blade",
        "tailwind",
        "css",
        "useclassy"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jeremy Butler",
            "email": "jeremy@jeremymbutler.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/view": "^10.0|^11.0|^12.0"
    },
    "autoload": {
        "psr-4": {
            "UseClassy\\Laravel\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "UseClassy\\Laravel\\UseClassyServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}